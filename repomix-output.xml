                </li>
              {%- endfor -%}
            </ul>
          </nav>
          <div class="menu-drawer-utility">
            {% render 'social-icons' %}

            {%- if section.settings.phone != blank and section.settings.show_phone_on_mobile -%}
              <div class="header-contact light">
                {{ 'sections.header.need_help' | t }}
                <a
                  class="link font-weight-bold"
